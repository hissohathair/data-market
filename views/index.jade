extends layout


block content
	div(class='wrapper')
	header
	div(class='container', name='queryTermForm')
		div(class='row')
			div(class='col-xs-12')
				form(role='form', action='javascript:void();')
					div(class='form-group')
						label(for='query-term') Query term
						input(id='query-term' type='text', class='form-control', name='term', placeholder='Enter query term')
					button(id='query-submit', class='btn btn-primary', data-toggle='popover', title='Please authorize request', data-content='<div class="row"><div class="col-xs-12">This request requires you to authenticate with Google and approve this app to perform queries against your GMail account:</div><div class="col-xs-12" style="margin-top: 5px; text-align: right;"><button id="authenticate-now" class="btn btn-primary">Authenticate request</button></div></div>') Submit
		section(id='widget-grid')
			div(class='row', style="margin-top: 20px;")
				article(class='col-xs-12 sortable-grid ui-sortable')
					div(class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable", id="wid-id-0", data-widget-editbutton='false', role='widget', style='position: relative; opacity: 1;')
						header
							span(class="widget-icon")
								i(class="fa fa-bar-chart-o")
							h2 Email density				
						div
							div(class="jarviswidget-editbox")
								input(class="form-control", type="text")
							div(class="widget-body")
								div(id="timeline", style="width:100%; height:300px;")
				article(id="recipient-decomposition", class='col-xs-12 sortable-grid ui-sortable')
					div(class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable", id="wid-id-1", data-widget-editbutton='false', role='widget', style='position: relative; opacity: 1;')
							header
								span(class="widget-icon")
									i(class="fa fa-bar-chart-o")
								h2 Frequent Correspondents				
							div
								div(class="jarviswidget-editbox")
									input(class="form-control", type="text")
								div(class="widget-body")
									div(class="col-xs-7")
										div(class='table-responsive')
											table(class='table table-bordered')
												thead
													tr
														th #
														th Email
														th Total
														th %
												tbody(id='person-table')
									div(class="col-xs-5")
										div(id="person-decomposition", style="width: 350px; height: 350px;")
				article(id="recipient-decomposition", class='col-xs-12 sortable-grid ui-sortable')
					div(class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable", id="wid-id-2", data-widget-editbutton='false', role='widget', style='position: relative; opacity: 1;')
							header
								span(class="widget-icon")
									i(class="fa fa-bar-chart-o")
								h2 Frequent Domains				
							div
								div(class="jarviswidget-editbox")
									input(class="form-control", type="text")
								div(class="widget-body")
									div(class="col-xs-7")

										div(class='table-responsive')
												table(class='table table-bordered')
													thead
														tr
															th #
															th Domain
															th Total
															th %
													tbody(id='domain-table')
									div(class="col-xs-5")
										div(id="domain-decomposition", style="width: 350px; height: 350px;")

	footer
	
	script(type='text/javascript', language='Javscript', src='//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.js')

	script(src="js/app.config.js")

	script(src="js/plugin/jquery-touch/jquery.ui.touch-punch.min.js") 

	script(src="js/bootstrap/bootstrap.min.js")

	script(src="js/notification/SmartNotification.min.js")

	script(src="js/smartwidgets/jarvis.widget.min.js")

	script(src="js/plugin/easy-pie-chart/jquery.easy-pie-chart.min.js")

	script(src="js/plugin/sparkline/jquery.sparkline.min.js")

	script(src="js/plugin/jquery-validate/jquery.validate.min.js")

	script(src="js/plugin/masked-input/jquery.maskedinput.min.js")

	script(src="js/plugin/select2/select2.min.js")

	script(src="js/plugin/bootstrap-slider/bootstrap-slider.min.js")

	script(src="js/plugin/msie-fix/jquery.mb.browser.min.js")

	script(src="js/plugin/fastclick/fastclick.min.js")

	script(src="js/demo.min.js")
	script(src="js/app.min.js")

	script(src="js/plugin/dygraphs/demo-data.min.js")
	script(src="js/plugin/dygraphs/dygraph-combined.min.js")

	script(type="text/javascript", src="https://www.google.com/jsapi")


	script(type='text/javascript', language='Javscript', src='/javascripts/client.js')
